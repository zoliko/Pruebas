<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_nip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/txt_numero_nip"
        android:importantForAutofill="no"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:onClick="NIP"
        android:text="@string/Boton"
        app:layout_constraintStart_toEndOf="@+id/txt_nip"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:isScrollContainer="true"
        android:fadeScrollbars="true"
        android:id="@+id/horizontalScrollView"
        android:layout_width="453dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageButton
                android:id="@+id/codigoqr"
                android:layout_width="89dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/Descripcion"
                android:onClick="Seleccion"
                android:padding="15dp"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/codigoqr" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/TexViews"
                android:textColor="@android:color/background_light" />

            <ImageButton

                android:id="@+id/buscar"
                android:layout_width="89dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:contentDescription="@string/Descripcion"

                android:onClick="Seleccion"
                android:padding="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/buscar" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/TexViews"
                android:textColor="@android:color/background_light" />

            <ImageButton
                android:id="@+id/ubicacion"
                android:layout_width="89dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/Descripcion"
                android:onClick="Seleccion"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ubicacion" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/TexViews"
                android:textColor="@android:color/background_light" />

            <ImageButton
                android:id="@+id/emergencia"
                android:layout_width="89dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:contentDescription="@string/Descripcion"

                android:onClick="Seleccion"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/emergencia"
                tools:srcCompat="@android:color/background_dark" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/TexViews"
                android:textColor="@android:color/background_light" />

            <ImageButton
                android:id="@+id/about"
                android:layout_width="89dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/Descripcion"
                android:onClick="Seleccion"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/aboutus" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/TexViews"
                android:textColor="@android:color/background_light" />

            <ImageButton
                android:id="@+id/contacto"
                android:layout_width="89dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:contentDescription="@string/Descripcion"

                android:onClick="Seleccion"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/infocontacto" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/TexViews"
                android:textColor="@android:color/background_light" />
        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/etiqueta_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Selecciona el menu !!!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205" />


</androidx.constraintlayout.widget.ConstraintLayout>